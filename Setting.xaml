<Window x:Class="POC.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POC"
        mc:Ignorable="d"
        Title="Setting" Height="251.181" Width="800">
    <StackPanel>
        <Label>Enter your company's location bounds in a "Lat,Lng" format</Label>
    <ScrollViewer Height="101" Margin="0,0,0.2,0">
            <StackPanel Name="myPanel" Margin="0,0,0.2,204.8" >

            </StackPanel>
        
    </ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
        <Button Name="Add" Grid.Column="0" Click="Add_Click">Add another Location</Button>
        <Button Name="Remove" Grid.Column="1" Click="Remove_Click">Remove last location</Button>
        </Grid>
        <Label>Please Enter Domain Name</Label>
        <TextBox Name="DomainName"></TextBox>
        <Button Click="Button_Click">Submit</Button>
    </StackPanel>
</Window>
