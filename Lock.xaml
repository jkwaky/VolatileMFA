<Window x:Class="POC.Lock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POC"
        mc:Ignorable="d"
        Title="Lock" 
        Height="450" 
        Width="800" 
        MouseUp="Leave" 
        KeyUp="Leave"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <Image 
            Name="img" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Stretch="Fill" 
            StretchDirection="Both" 
            Grid.ColumnSpan="2"
            >

            <Image.Source>
                C:\Users\kwakj\source\repos\POC\POC\img\background.jpg
            </Image.Source>
        </Image>
        <StackPanel 
            Orientation="Vertical" 
            VerticalAlignment="Bottom" 
            Margin="0,0,0,0" 
            Grid.ColumnSpan="2" 
            >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label 
                    FontWeight="Light" 
                    Padding = "20,0,0,0" 
                    Grid.Row = "1" 
                    Name="labelDate" 
                    FontFamily = "Segoe UI" 
                    FontSize="45" 
                    HorizontalAlignment="Left" 
                    Foreground="White" 
                    Margin="0,0,0,50"
                    />
                <Label 
                    FontWeight="Light" 
                    Padding = "20,0,0,0" 
                    Grid.Row = "0" 
                    Name="labelName" 
                    FontFamily = "Segoe UI" 
                    FontSize="100" 
                    HorizontalAlignment="Left" 
                    Foreground="White" 
                    Margin="0,0,0,0" 
                    />

            </Grid>

        </StackPanel>

    </Grid>
</Window>
